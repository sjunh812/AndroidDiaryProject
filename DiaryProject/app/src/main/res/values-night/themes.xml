<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Font Activity 스타일 -->
    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/azure</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <!--Toolbar 스타일-->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item> <!-- Toolbar의 타이틀 텍스트-->
    </style>
    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
    </style>

    <!-- Calendar Date의 타이틀 텍스트-->
    <style name="CalendarDateTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- -->
    <!-- 카페24 고운밤 폰트 테마(NoActionBar) -->
    <!-- -->
    <style name="Theme.DiaryProject" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- API 23 이상부터 가능(상태바 위의 상태표시줄 색상) -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <!--custom font-family 적용-->
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="editTextStyle">@style/customEditTextFontStyle</item>
        <item name="radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
        <item name="android:spinnerStyle">@style/customSpinnerFontStyle</item>
        <item name="mcv_headerTextAppearance">@style/customCalenderHeaderFontStyle</item>
        <item name="mcv_dateTextAppearance">@style/customCalenderHeaderFontStyle</item>

    </style>
    <!-- 커스텀 폰트가 적용된 BottomNavigationView -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/font1</item>
    </style>
    <!-- Custom font 적용 -->
    <style name="customCalenderHeaderFontStyle">
        <item name="android:fontFamily">@font/font1</item>
    </style>

    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
